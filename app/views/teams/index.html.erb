
<div class="container">
  <div class="row">
    <div class="col-xs-12">

      <p id="notice"><%= notice %></p>

      <h1>Teams</h1>

      <div class="row">
        <div class="col-xs-12">
          <table class="tbl">
            <thead>
              <tr>
                <th>Title</th>
                <th>Code</th>
                <th>Team</th>
                <th colspan="3"></th>
              </tr>
            </thead>
          
            <tbody>
              <% @teams.each do |team| %>
                <tr>
                  <td><%= team.title %></td>
                  <td><%= team.code %></td>
                  <td><%= team.full_name %></td>
                  <td><%= link_to 'Show', team %></td>
                  <td><%= link_to 'Edit', edit_team_path(team) %></td>
                  <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <div class="new"><%= link_to 'New Team', new_team_path %></div>
        </div>
      </div>
    </div>
  </div>
</div>

